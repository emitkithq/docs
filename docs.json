{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "EmitKit",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": [
        "javascript",
        "bash"
      ],
      "defaults": "required",
      "prefill": true
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "installation"
            ]
          },
          {
            "group": "SDK",
            "pages": [
              "sdk/typescript",
              "sdk/installation",
              "sdk/events",
              "sdk/identify",
              "sdk/error-handling",
              "sdk/advanced"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/overview",
              "concepts/events",
              "concepts/notifications",
              "concepts/webhooks",
              "concepts/multi-tenancy",
              "concepts/authentication"
            ]
          },
          {
            "group": "Self-Hosting",
            "pages": [
              "self-hosting/overview",
              "self-hosting/prerequisites",
              "self-hosting/installation",
              "self-hosting/configuration",
              "self-hosting/tinybird",
              "self-hosting/deployment",
              "self-hosting/troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "api-reference/openapi.json",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/emitkit",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://github.com/emitkithq/emitkit/discussions",
          "icon": "comments"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://emitkit.com/support"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://emitkit.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/emitkit",
      "x": "https://x.com/emitkit"
    }
  }
}